<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="android:Theme.Material.Light.DarkActionBar" >
        <item name="android:colorPrimary">@android:color/holo_green_dark</item>
        <item name="android:colorPrimaryDark">@android:color/holo_green_light</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/navigationBarColor</item>
        <item name="android:textColorSecondary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark
        </item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>


</resources>
